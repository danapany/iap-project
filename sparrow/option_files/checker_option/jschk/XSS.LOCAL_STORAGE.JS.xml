<?xml version="1.0" encoding="utf-8"?>
<option>
    <category name="XSS.LOCAL_STORAGE.JS">
        <item name="taint_source" type="string" required="true" variable="true" regexp="true">
            <value>return of fqn("localStorage.getItem")</value>
        </item>
        <item name="taint_sink" type="string" required="true" variable="true" regexp="true">
            <value>param(*) of fqn("eval")</value>
            <value>param(*) of fqn("Function")</value>
            <value>param(*) of fqn("setTimeout")</value>
            <value>param(1) of fqn("location.assign")</value>
            <value>param(1) of fqn("location.replace")</value>
            <value>param(*) of fqn("document.write")</value>
            <value>param(*) of fqn("document.writeln")</value>
            <value>param(*) of fqn("document.location.replace")</value>
            <value>param(1) of name("exec")</value>
            <!-- Sink added -->
            <value>param(*) of fqn("alert")</value>
            <value>param(5) of fqn("crypto.generateCRMFRequest")</value>
            <value>param(1) of name("createContextualFragment")</value>
            <value>operand(2) of name("=") if operand(1) == fqn(reg(".+\.innerHTML"))</value>
        </item>
        <item name="taint_propagator" type="string" required="false" variable="true" regexp="true">
            <value>operand(*) of name("+") to return</value>
            <value>base of name("substring") to return</value>
        </item>
        <item name="taint_filter" type="string" required="false" variable="true" regexp="true">
            <value>return of name("encodeURIComponent")</value>
        </item>
        <item name="taint_filter_function_fqn" type="string" required="false" variable="true" regexp="true">
            <value></value>
        </item>
    </category>
</option>

